@page
@model Categories.IndexModel
@{
    ViewData["Title"] = "List of Categories";
    var categories = Model.Categories;
   
    var keySortId = Model.Sort == "id" ? "idDesc" : "id";
    var keySortName = Model.Sort == "name" ? "nameDesc" : "name"; 
    var keySortRowVersion = Model.Sort == "rowVersion" ? "rowVersionDesc" : "rowVersion";
    var prev = categories.HasPreviousPage ? "" : "disable";
    var next = categories.HasNextPage ? "" : "disable";
}
 
<form asp-page="./Index" method="get">
    <a asp-page="Create">Add a category</a>
    
    <input type="text" name="search" id="search" value="@Model.Filter" class="leftShift w6">
        <input type="submit" value="Search Title" class="button greenBk w6">
</form><br>

<p>
    Total categories: @categories.Total , Page: @categories.PageID out of 5
</p>

<table class="table">
    <thead>
        <tr>
            <th><a asp-page="./Index" asp-route-filter="@Model.Filter" asp-route-sort="@keySortId">Id</a></th>
            <th><a asp-page="./Index" asp-route-filter="@Model.Filter" asp-route-sort="@keySortName">Text</a></th>
            <th><a asp-page="./Index" asp-route-filter="@Model.Filter" asp-route-sort="@keySortRowVersion">RowVersion</a></th>
            <th>Actions</th>
            </tr>
    </thead>
    <tbody>
        @foreach (var x in categories)
        {
            <tr>
                <td class="center">@x.Id</td>
                <td>@x.Name</td>
                <td>@x.RowVersion</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@x.Id">Edit</a> 
                    <a asp-page="./Delete" asp-route-id="@x.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table><br><br>
<a asp-page="./Index" asp-route-filter="@Model.Filter" asp-route-pageID="@(categories.PageID - 1)" class="button @prev">Previous</a>
<a asp-page="./Index" asp-route-filter="@Model.Filter" asp-route-pageID="@(categories.PageID + 1)" class="button @next">Next</a>